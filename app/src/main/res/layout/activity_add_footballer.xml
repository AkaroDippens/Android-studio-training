<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFootballerActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/footballer_first_name"
        android:layout_width="364dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:hint="Имя"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/footballer_last_name"
        android:layout_width="364dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:hint="Фамилия"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footballer_first_name" />

    <EditText
        android:id="@+id/football_club"
        android:layout_width="364dp"
        android:layout_height="44dp"
        android:layout_margin="20dp"
        android:hint="Футбольный Клуб"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footballer_last_name" />

    <Button
        android:id="@+id/button"
        android:layout_width="349dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="28dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>